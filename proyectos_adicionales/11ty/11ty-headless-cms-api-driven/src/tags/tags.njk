---
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /tags/{{ tag }}/
layout: base.njk
renderData:
  title: "Posts tagged “{{ tag }}”"
  metaDescription: "All posts from the Blog tagged with “{{ tag }}”"
---
<div class="page-container">
  <div class="tag-list tag-list--no-wrap">
    <h3 class="tag-list__title">Articles Tagged: "{{ tag | capitalize }}"</h3>
    <a class="btn btn--danger" href="/blog">Remove Tag</a>
  </div>

  {% from "macros/articlelist.njk" import articlelist %}
  {{ articlelist(
    articles = collections[tag] | reverse,
    show_tags = true
  ) }}

  <nav>
    <a href="{{ '/blog/' | url }}">← View All Articles</a>
  </nav>
</div>
